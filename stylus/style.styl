red_360 = #c90018

body
    font-family 'Source Sans Pro', sans-serif
    font-size 21px
    margin 0
    padding 0

h1
    font-size 40px
    color red_360

h2
    font-size 30px
    color red_360

a 
    color red_360

.wrapper
    width 1000px
    margin auto

header
    height 100px
    box-shadow 0px -5px 30px #3d434b
    position fixed
    width 100%
    padding 0
    background-color rgba(255,255,255,.9)
    img
        height 90px
        margin-top 5px
    a
        float right
        height 40px
        background-color red_360
        font-size 24px
        width 215px
        text-align center
        color #fff
        text-decoration none
        border-radius 5px
        box-shadow 0 5px 0 #9b041d
        padding-top 10px
        margin-top 25px

.Home
    background url(../images/bg-home.jpg)

.ImageHeader
    padding-top 100px
    text-align center
    color white
    background-repeat no-repeat
    background-size cover
    background-position-y 100px
    background-position-x center
    .wrapper
        padding 100px 0
    h1
        text-transform uppercase
        color white
        margin-top 0px
    p 
        font-weight bold
        margin 40px 0 35px 0
    input
        display inline-block
        vertical-align middle
        height 38px
        font-size 18px
        padding 0px 10px
        border-radius 5px 0px 0px 5px
        border 1px solid #939393
    a 
        display inline-block
        vertical-align middle
        text-decoration none
        color #fff
        background-color red_360
        font-size 21px
        font-weight 600
        border-radius 0 5px 5px 0
        height 35px
        width 65px
        margin-left -6px
        padding 5px 0 0 0

.CallBanner
    text-align center
    background-color red_360
    padding 16px 0
    h2
        margin 0
        color white
    a 
        color white

.Services
    text-align center
    margin 35px 0
    h2
        margin 0
        padding 0
        color red_360
    p 
        text-align left
        font-weight 400
        font-style normal
        line-height 1.58
        letter-spacing -.003em
    a 
        display inline-block
        margin 45px 26px 20px 0
        padding 0
        vertical-align top
        width 220px
        color red_360
        img
            width 220px
            border-radius 50%
            margin-bottom 16px
        &:last-child
            margin 0
        span
            font-weight 600

.Dark
    background-color #3d434b
    color white
    h2
        color white

.Benefits
    text-align center
    padding 10px 0 45px 0
    &-Single
        display inline-block
        vertical-align top
        margin 30px 60px 0 0
        &:last-child
            margin 30px 0px 0 0
        img
            height 60px
        span
            font-size 21px
            display block
            width 190px
            margin 10px 0 0 0

.Testimonies
    margin-bottom 30px
    .wrapper
        text-align center
    h2
        text-align center
    &-Single
        width 388px
        height 300px
        border 1px solid #000000
        background-color #f3f3f3
        margin 15px
        padding 15px
        display inline-block
        vertical-align top
        border-radius 15px
        text-align left
        img
            display inline-block
            vertical-align middle
            height 60px
            margin-right 10px
        h3
            color #000
            display inline-block
            vertical-align middle
            margin 0
        p 
            text-align left
            font-weight 400
            font-style normal
            line-height 1.58
            letter-spacing -.003em

.FormBanner
    text-align center
    padding 40px 0
    h2 
        margin 0 0 40px 0
    input
        display inline-block
        vertical-align middle
        height 46px
        font-size 21px
        padding 0px 10px
        border-radius 5px
        border 1px solid #939393
        margin-right 15px
        margin-top 10px
    .Red-Button
        display inline-block
        vertical-align middle
        height 35px
        background-color #c90018
        font-size 21px
        width 215px
        text-align center
        color #fff
        text-decoration none
        border-radius 5px
        box-shadow 0 5px 0 #9b041d
        padding 8px 0 0 0
        margin-top 6px




@media (min-width: 768px) and (max-width: 1023px) {
    .wrapper {
        width 700px
    }
}

@media (min-width: 540px) and (max-width: 767px) {
    .wrapper {
        width 530px
    }
    .ImageHeader .wrapper {
        padding 70px 0 !important
    }
}

@media (min-width: 320px) and (max-width: 539px) {
    body {
        font-size 16px !important
    }
    h1 {
        font-size 30px !important
    }
    h2 {
        font-size 20px !important
    }
    .wrapper {
        width 319px
    }
    header {
        height 70px !important
    }
    header img {
        height 58px !important
    }
    header a {
        height 30px !important
        width 147px !important
        font-size 17px !important
        margin-top 13px !important
    }
    .ImageHeader {
        background-position-y 70px !important
    }
    .ImageHeader .wrapper {
        padding 50px 0 !important
    }
    .Services a {
        margin 35px 20px 10px 0 !important
        width 130px !important
    }
    .Services a img {
        width 130px !important
    }
    .Benefits-Single {
        margin 20px 0px 0 0 !important
    }
    .FormBanner h2 {
        margin: 0 0 0px 0 !important
    }
    .FormBanner input {
        margin-right 0px !important
    }
    .Benefits-Single span {
        font-size 16px !important
        width 150px !important
        margin 20px 0 0 0 !important
    }
    .Testimonies-Single {
        width 290px !important
        height 250px !important
        margin 15px 0 !important
    }
    .Testimonies-Single img {
        height 40px
    }
}